<Window x:Class="clinic.ManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ManagementWindow" Height="640" Width="800">
    <Grid>
        <TabControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" FlowDirection="RightToLeft">
            <TabItem Header="گزارش‌های دریافتی">
                <Grid Background="#FFE5E5E5">
                    <Label Content="گزارشات دریافتی از سایر بخش ها را می بیند و پاسخ مناسب را ارسال می کند" HorizontalAlignment="Left" Margin="191,250,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="مدیریت پرسنل">
                <Label Content="لیست کارکنان را می بیند و می تواند آنها را حذف یا اضافه یا ویرایش کند" HorizontalAlignment="Left" Margin="191,250,0,0" VerticalAlignment="Top"/>
            </TabItem>
            <TabItem Header="ارسال نامه">
                <Label Content="به سایر بخش ها نامه ارسال می کند" HorizontalAlignment="Left" Margin="191,250,0,0" VerticalAlignment="Top"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
